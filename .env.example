# Azure OpenAI Configuration
AZURE_GPT_ENDPOINT=https://your-resource.openai.azure.com/openai/deployments/your-deployment
AZURE_GPT_API_KEY=your_api_key_here
AZURE_API_VERSION=your_api_version_here

# Timeout Configuration (in milliseconds) - Optional, defaults provided
# API request timeout (default: 60000ms = 60 seconds)
API_TIMEOUT=60000

# Web request timeout (default: 30000ms = 30 seconds)
WEB_TIMEOUT=30000

# Command execution timeout (default: 120000ms = 2 minutes)
COMMAND_TIMEOUT=120000

# Image analysis timeout (default: 90000ms = 90 seconds)
IMAGE_TIMEOUT=90000

# Retry Configuration
# Maximum number of retry attempts (default: 3)
MAX_RETRY_ATTEMPTS=3

# Base delay between retries in milliseconds (default: 1000ms = 1 second)
RETRY_BASE_DELAY=1000

# Maximum delay between retries in milliseconds (default: 30000ms = 30 seconds)
RETRY_MAX_DELAY=30000

# Exponential backoff multiplier (default: 2)
RETRY_BACKOFF_MULTIPLIER=2
